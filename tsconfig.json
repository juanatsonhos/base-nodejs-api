{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "build",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es6",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "./src/types"],
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/public/"]
}
